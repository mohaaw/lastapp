{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "total": {
      "type": "decimal",
      "required": true
    },
    "customer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::customer.customer"
    },
    "invoice_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice-item.invoice-item",
      "mappedBy": "invoice"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "completed",
        "cancelled"
      ],
      "default": "pending",
      "required": true
    },
    "sale_date": {
      "type": "datetime",
      "default": "NOW",
      "required": true
    }
  }
}
